/**app.wxss**/

page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;

}

.container {
    flex-direction:column;
    display:flex;
    min-height:100%;
    justify-content: space-between;
    align-items: center;
    font-size:32rpx;
    font-family:-apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    padding: 200rpx 0;
    box-sizing: border-box;
    background-color: #F8F8F8;
}

.page-head {
    background-color: #F8F8F8;
    padding:20rpx 10rpx 10rpx; 
    text-align:center;
}

.page-head-title{
  background-color: #F8F8F8;
  display: inline-block;
  padding: 10rpx 40rpx 0rpx 40rpx;
  font-size: 32rpx;
  color: #BEBEBE;
}

.page-head-line{

  margin: 0 auto;
  width: 150rpx;
  height: 4rpx;
  background-color: #D8D8D8;
}

.page-body {
  background-color: #F8F8F8;
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-foot{
  background-color: #F8F8F8;
  margin: 100rpx 0 30rpx 0;
  text-align: center;
  color: #1aad19;
  font-size: 0;
}

.icon-foot{
  width: 152rpx;
  height: 23rpx;
}

.btn-area{
  background-color: #F8F8F8;
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.bck-color{
  background-color: #F8F8F8;
}

