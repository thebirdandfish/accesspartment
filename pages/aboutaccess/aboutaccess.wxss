/* pages/aboutaccess/aboutaccess.wxss */
page {
  line-height: 1.6;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}
icon {
  vertical-align: middle;
}

.frontdesk-image{
  width:450rpx;
  height:300rpx;
}

.intro-text{
  background-color: #F8F8F8;
  width:600rpx;
  display:flex; 
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
}


.about-wei {text-align: left;background-color: #F8F8F8;}
.about-img {display: block;width: 124px;height: 110px;margin: 20px auto 0;background-color: #F8F8F8;}
.about-content { text-indent: 2em; font-size: 32rpx; margin: 0 48rpx; line-height: 1.3;background-color: #F8F8F8;}
.about-addr {font-size: 32rpx; text-indent: 2em; margin: 0 48rpx; line-height: 1.3;background-color: #F8F8F8;}
.about-callme {font-size: 32rpx; text-indent: 2em; margin: 0 0 0 48rpx; line-height: 1.9;background-color: #F8F8F8;}
.in-img {width: 62rpx;height: 55rpx;background-color: #F8F8F8;}

.mini-btn{
  margin-left: 10rpx;
  justify-content: center;
  background-color: #F8F8F8;
}

.callmeat{
  flex-direction: row;
  display: flex;
  background-color: #F8F8F8;
}

y-button {
  margin-bottom: 30rpx;
  background-color: #F8F8F8;
}

.page-section-gap{
  box-sizing: border-box;
  background-color: #F8F8F8;
  width: 100%;
  height: 500rpx;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-color: gray;
  border-style: dashed;
}

.page-body-button {
  margin-bottom: 30rpx;
  background-color: #F8F8F8;
}

.page-section-title {
  font-size:28rpx;
  color:#999999;
  margin-bottom:10rpx;
  padding-left:30rpx;
  padding-right:30rpx;
}



.weui-cell {
  background-color: white;
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 6px;
  padding-bottom: 6px;
  margin-top: -10rpx;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-color: gray;
  border-style: dashed;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.weui-cell__ft {
  text-align: right;
  color: #999999;
}

.page-section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.weui-cell-left{
  justify-content:space-around;
}
.weui-cell-left-text{
  width: 50 rpx;
  line-height:12pt;
}
.weui-cell-right-text{
  width: 500 rpx;
  color: #999999;
  line-height:12pt;
}

.streetguide-img-big{
